@model Catogory
    <div class=" card shadow border-0 mt-4">

        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white p-0">
                        Create Catogory
                    </h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post" clas="row">
                @*When Ever Id is showing 0 while debuging keep id as hidden*@
                @* <input asp-for="id" hidden/>*@


                <div asp-validation-summary="All"></div>
                <div class="mb-3 row ">
                    <label asp-for="Name" class="form-control border-0 shadow"></label>
                    <input asp-for="Name" class="ms-2" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3 row">
                    <label asp-for="DisplayOrder" class="form-control border-0 shadow"></label>
                    <input asp-for="DisplayOrder" class="ms-2" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
     
                <div class="mb-3 row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6  col-md-3 ">

                        <a asp-controller="Catogory" asp-action="Index" class="btn btn-outline-primary mx-2">BacktoList</a>

                    </div>
                </div>
            </form>
        </div>
    </div>


   