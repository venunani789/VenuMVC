@model Product
    <div class=" card shadow border-0 my-4">

        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white p-0">
                       Delete Product
                    </h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post" class="row">
               
                    <input asp-for="id" hidden />
                    
                        <div asp-validation-summary="All"></div>
                        <div class="mb-3 row ">
                            <label asp-for="Author" disabled class="p-0"></label>
                            <input asp-for="Author"  disabled class="form-control" />
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Title" disabled class="p-0"></label>
                            <input asp-for="Title" disabled class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="ISBN" disabled class="p-0"></label>
                            <input asp-for="ISBN" disabled class="form-control" />
                            <span asp-validation-for="ISBN" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="Description" disabled class="p-0"></label>
                            <input asp-for="Description" disabled class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="ListPrice" disabled class="p-0"></label>
                            <input asp-for="ListPrice" disabled class="form-control" />
                            <span asp-validation-for="ListPrice" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="Price" disabled class="p-0"></label>
                            <input asp-for="Price" disabled class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="Price50" disabled class="p-0"></label>
                            <input asp-for="Price50" disabled class="form-control" />
                            <span asp-validation-for="Price50" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="Price100" disabled class="p-0"></label>
                            <input asp-for="Price100" disabled class="form-control" />
                            <span asp-validation-for="Price100" class="text-danger"></span>

                        </div>
                   
                    <div class="row">
                        <div class="col-3">
                            <button type="submit" class="btn btn-danger form-control">Delete</button>
                        </div>
                        <div class="col-3">
                            <a asp-controller="Product" asp-action="Index" class=" btn btn-outline-primary   form-control">Back to List</a>
                        </div>
                    </div>



                </form>
        </div>
</div>
